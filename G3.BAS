SUB KeyBufferEmpty
DO UNTIL INKEY$ = ""
LOOP
END SUB

SUB PUTSCORES
LOCATE 2, 2: COLOR 2: PRINT "SCORE:": LOCATE 2, 8: PRINT SCORE
LOCATE 2, 13: PRINT "STEPS:": LOCATE 2, 19: PRINT STEPS
LOCATE 2, 23: PRINT "LEVEL:": LOCATE 2, 29: PRINT L
LOCATE 2, 32: PRINT "LIVES:": LOCATE 2, 38: PRINT LIVES
END SUB

